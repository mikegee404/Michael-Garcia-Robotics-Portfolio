import time
import RPi.GPIO as GPIO
import pygame   # <-- For voice announcement

# ----- AUDIO SETUP -----
pygame.mixer.init()
pygame.mixer.music.load("delivery_complete.wav")

# ----- GPIO SETUP -----
GPIO.setmode(GPIO.BCM)

# Motor Pins
LEFT_MOTOR_FORWARD = 17
LEFT_MOTOR_BACKWARD = 18
RIGHT_MOTOR_FORWARD = 22
RIGHT_MOTOR_BACKWARD = 23

# Ultrasonic Pins
TRIG = 5
ECHO = 6

# Setup motor pins
motor_pins = [LEFT_MOTOR_FORWARD, LEFT_MOTOR_BACKWARD,
              RIGHT_MOTOR_FORWARD, RIGHT_MOTOR_BACKWARD]

for pin in motor_pins:
    GPIO.setup(pin, GPIO.OUT)
    GPIO.output(pin, GPIO.LOW)

# Setup ultrasonic pins
GPIO.setup(TRIG, GPIO.OUT)
GPIO.setup(ECHO, GPIO.IN)


# ----- HELPER FUNCTIONS -----

def distance():
    """Returns distance in cm using the ultrasonic sensor."""
    GPIO.output(TRIG, True)
    time.sleep(0.00001)
    GPIO.output(TRIG, False)

    start_time = time.time()
    stop_time = time.time()

    while GPIO.input(ECHO) == 0:
        start_time = time.time()

    while GPIO.input(ECHO) == 1:
        stop_time = time.time()

    elapsed = stop_time - start_time
    return (elapsed * 34300) / 2


def forward():
    GPIO.output(LEFT_MOTOR_FORWARD, True)
    GPIO.output(RIGHT_MOTOR_FORWARD, True)


def stop():
    GPIO.output(LEFT_MOTOR_FORWARD, False)
    GPIO.output(RIGHT_MOTOR_FORWARD, False)
    GPIO.output(LEFT_MOTOR_BACKWARD, False)
    GPIO.output(RIGHT_MOTOR_BACKWARD, False)


def turn_right():
    stop()
    GPIO.output(RIGHT_MOTOR_BACKWARD, True)
    GPIO.output(LEFT_MOTOR_FORWARD, True)
    time.sleep(0.6)
    stop()


def speak():
    """Plays the voice announcement."""
    pygame.mixer.music.play()
    while pygame.mixer.music.get_busy():
        time.sleep(0.1)


# ----- MAIN DELIVERY PROGRAM -----

try:
    print("Starting delivery route...")
    start_time = time.time()

    while True:
        dist = distance()
        print("Distance:", round(dist, 2), "cm")

        if dist < 20:
            print("Obstacle detected! Turning right...")
            turn_right()
        else:
            forward()

        # End delivery after 15 seconds
        if time.time() - start_time > 15:
            print("Destination reached!")
            stop()
            speak()  # <-- Voice message plays here
            break

        time.sleep(0.1)

except KeyboardInterrupt:
    pass

finally:
    stop()
    GPIO.cleanup()
    print("Program ended.")
